rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@ovefoods.com';
    }
    
    // Products - read access for everyone, write access for admin only
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Categories - read access for everyone, write access for admin only
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Recipes - read access for everyone, write access for admin only
    match /recipes/{recipeId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Locations - read access for everyone, write access for admin only
    match /locations/{locationId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Story posts - read access for everyone, write access for admin only
    match /stories/{storyId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Sustainability metrics - read access for everyone, write access for admin only
    match /sustainability/{metricId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}